    </script>
    <script>
      $(document).ready(function(){

      })
    </script>
  </head>
  <body>
  <% if(messages.form_validation) { %>
     <% for (var x of messages.form_validation) { %>
      <h3><%= x %></h3>
     <% } %>
 <% } %>
    <h1> Edit <%=penguin.name%> </h1>
    <form action='/penguins/<%=penguin._id%>' method=POST>
        Name: <input type=text name=name value="<%=penguin.name%>">
        Species: <input type=text name=species value="<%=penguin.species%>">
        Age: <input type=text name=age value="<%=penguin.age%>">
        Location: <input type=text name=location value="<%=penguin.location%>">
        <input type=submit>
    </form>
  </body>
</html>
